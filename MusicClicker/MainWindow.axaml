<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="MusicClicker.MainWindow"
    Title="ðŸŒ¹ðŸŽ¹ Magnum Opus ðŸŽ¹ðŸŒ¹"
    Width="1600" Height="900">

    <Window.Background>
        <ImageBrush
            Source="avares://MusicClicker/Assets/sacredtrevor_A_grand_musical_city_lights_everywhere_popular_shi_d84ff662-c87b-4630-9887-25228f42097b-min.png"
            Stretch="UniformToFill" />
    </Window.Background>

    <Grid>
        <!-- Main Screen -->
        <Grid x:Name="MainScreen">
            <!-- Top section: Title and Notes counter -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
                Spacing="10">
                <TextBlock Text="ðŸŒ¹ðŸŽ¹ Magnum Opus ðŸŽ¹ðŸŒ¹" FontSize="36" Foreground="White"
                    HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock x:Name="NotesText" Text="Notes: 0" FontSize="28" Foreground="White"
                    HorizontalAlignment="Center" />
                <TextBlock x:Name="NpsText" Text="Notes Per Second: 0" FontSize="22"
                    Foreground="White" HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Left side buttons (slightly shifted down) -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="30,10,0,0" Spacing="10">
                <Button x:Name="FragmentationButton" Width="300" Height="170"
                    HorizontalAlignment="Left">
                    <Image Source="avares://MusicClicker/Assets/Fragmentation Button-min.png"
                        Width="300" Height="170" Stretch="UniformToFill" />
                </Button>
                <Button x:Name="ResonanceButton" Width="300" Height="170" HorizontalAlignment="Left">
                    <Image
                        Source="avares://MusicClicker/Assets/Music Game 16_9 Assets [C690BBF]-min.png"
                        Width="300" Height="170" Stretch="UniformToFill" />
                </Button>
                <Button x:Name="MelodyButton" Width="300" Height="170" HorizontalAlignment="Left">
                    <Image
                        Source="avares://MusicClicker/Assets/Music Game 16_9 Assets [2299EA4]-min.png"
                        Width="300" Height="170" Stretch="UniformToFill" />
                </Button>
                <Button x:Name="HarmonyButton" Width="300" Height="170" HorizontalAlignment="Left">
                    <Image
                        Source="avares://MusicClicker/Assets/Music Game 16_9 Assets [5A28B4B]-min.png"
                        Width="300" Height="170" Stretch="UniformToFill" />
                </Button>
            </StackPanel>


            <!-- Center main clickable button -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <Button x:Name="ClickButton" Width="250" Height="250">
                    <Image Source="avares://MusicClicker/Assets/Music Game Assets [A961E2A]-min.png"
                        Stretch="Uniform" />
                </Button>

                <!-- Upgrades button below main button -->
                <Button x:Name="OpenUpgradesButton" Content="Upgrades" Width="300" Height="60"
                    Background="#55000000" Foreground="White" FontSize="20" />
            </StackPanel>
        </Grid>
        <!-- Upgrade Screen -->
        <Grid x:Name="UpgradeScreen" IsVisible="False" Background="#AA000000">
            <StackPanel Margin="20" Spacing="20">
                <TextBlock Text="Upgrades" FontSize="36" FontWeight="Bold" Foreground="White" />
                <TextBlock x:Name="UpgradeNotesText" Text="Notes: 0" FontSize="28"
                    Foreground="White" />
                <!-- Chord Upgrade Info -->
                <Border Background="#333333" BorderBrush="White" BorderThickness="2" Padding="10"
                    Width="400">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <Image Source="avares://MusicClicker/Assets/MusicGameAssetsChord-min.png"
                            Width="100" Height="100" Stretch="UniformToFill" />
                        <StackPanel>
                            <TextBlock Text="Chord" FontSize="24" FontWeight="Bold"
                                Foreground="White" />
                            <TextBlock x:Name="ChordOwnedTextUpgrade" Text="Number Owned: 0"
                                FontSize="18" Foreground="White" />
                            <TextBlock x:Name="ChordCostTextUpgrade" Text="Cost: 10" FontSize="18"
                                Foreground="White" />
                            <TextBlock Text="Adds 0.5 NPS" FontSize="18" Foreground="White" /> <!--
                            New text -->
                            <Button x:Name="BuyChordButton" Content="Buy" Width="100" Height="40"
                                Background="#55000000" Foreground="White" FontSize="18" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Button x:Name="BackButton" Content="Back" Width="200" Height="50"
                    Background="#55000000" Foreground="White" FontSize="20" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>